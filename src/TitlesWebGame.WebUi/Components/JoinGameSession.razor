@using TitlesWebGame.WebUi.Services
@inject GameSocketConnectionManager GameSocketConnectionManager


<div class="row justify-content-center m-4">
    <div class="join-session-card gen-bg-yellow col-sm-10 col-md-8 col-lg-4">
        <div class="row justify-content-center text-center">
            <div class="h3 font-weight-bold mb-3">Join Session</div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group">
                <label for="roomKeyInput" class="font-weight-bold">Room Key:</label>
                <input id="roomKeyInput" @bind="roomKey" type="text" class="form-control"/>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group">
                <label for="joinGameDisplayNameInput" class="font-weight-bold">Display Name:</label>
                <input id="joinGameDisplayNameInput" @bind="displayName" type="text" class="form-control"/>
            </div>
        </div>
        <div class="row justify-content-center">
            <div>
                <button @onclick="JoinRoom" type="button" class="btn btn-success font-weight-bold">Join Session</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string roomKey;
    private string displayName;

    private async Task JoinRoom()
    {
        await GameSocketConnectionManager.JoinGameSession(roomKey, displayName);
    }
}