

<div class="progress" style="height: 40px;">
    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" 
         style="@($"width: {progressPercentage}%")" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="@TimeUnits"></div>
</div>

@code {
    [Parameter]
    public int TimeUnits { get; set; }

    private float progress;
    private float progressPercentage;
    
    [Parameter]
    public int IntervalMs { get; set; }

    private bool _timerFinished = false;

    protected override void OnInitialized()
    {
        progress = TimeUnits;
        progressPercentage = 100;
        
        SetTimer(TimeUnits, IntervalMs);
        base.OnInitialized();
    }

    private async Task SetTimer(int secondsAmount, int interValMs)
    {
        while (TimeUnits > 0)
        {
            await Task.Delay(interValMs);
            progress--;
            progressPercentage = ((progress / TimeUnits) * 100);
            StateHasChanged();
        }

        _timerFinished = true;
    }

}