@using TitlesWebGame.WebUi.Services
@using Microsoft.AspNetCore.SignalR.Client
@inject GameSocketConnectionManager GameSocketConnectionManager

<div class="row justify-content-center m-4">
    <div class="join-session-card gen-bg-blue col-sm-10 col-md-8 col-lg-4">
        <div class="row justify-content-center text-center">
            <div class="h3 font-weight-bold mb-3">Create Session</div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group">
                <label for="createGameDisplayNameInput" class="font-weight-bold">Display Name:</label>
                <input id="createGameDisplayNameInput" @bind="displayName" type="text" class="form-control"/>
            </div>
        </div>
        <div class="row justify-content-center">
            <div>
                <button @onclick="CreateRoom" type="button" class="btn btn-success font-weight-bold">Create Session</button>
            </div>
        </div>
    </div>
</div>

@code {
    private string displayName = "";
    private string selectedRoomKey;
    
    private async Task CreateRoom()
    {
        await GameSocketConnectionManager.CreateGameSession(displayName);
    }
    
}