@page "/GameRoundReviewPreviewPage"

@using GEmojiSharp.Blazor

<div class="container">
    <div class="row justify-content-center">
        <div class="round-title">What color is a fox</div>
    </div>
    
<div class="options-container">
    @{
        string colorOption = _hadAnswerRight ? "right" : "wrong";
    }
    <div class="option-button option-color-@colorOption">
            A ) Me myself and i
        </div>
    </div>
    <div class="row justify-content-center h3">
    </div>
    <div class="scores-container">
        @for (int i = 0; i < 7; i++)
        {
            var placeNumber = i + 1;

            <ul class="player-score-container">
                <li class="gen-bg-dark score-mark">
                    <div class="score-item-content">
                        @placeNumber )
                    </div>
                </li>
                <li class="gen-bg-red score-name">
                    <div class="score-item-content">
                        Mark
                    </div>
                </li>
                <li class="gen-bg-blue score-points">
                    <div class="score-item-content">
                        1200
                    </div> 
                </li>
                <li class="gen-bg-yellow score-titles">
                    <div class="score-item-content score-titles-items">
    
                    </div> 
                </li>
            </ul>
        }
    </div>
</div>

@code {
    private bool _hadAnswerRight = true;
}